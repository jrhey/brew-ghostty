# Brewfile example
brew "neovim"
brew "ripgrep"      # For telescope and search
brew "fd"           # File finder
brew "fzf"          # Fuzzy finder
brew "tree-sitter"  # Syntax highlighting
brew "luajit"       # Lua runtime
brew "node"         # For many Neovim plugins
brew "yarn"         # Node package manager

# Language servers and tools
brew "lua-language-server"

# Development tools
brew "git"
brew "gh"       # GitHub CLI
brew "lazygit"  # Git UI
brew "tmux"     # Terminal multiplexer
